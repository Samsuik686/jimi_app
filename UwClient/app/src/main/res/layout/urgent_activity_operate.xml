<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <include layout="@layout/back_layout" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_in_ware"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="出库操作"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:background="@drawable/operate_left_unselect" />

            <TextView
                android:id="@+id/tv_out_ware"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="当前任务"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:background="@drawable/operate_right_unselect" />

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/layouts_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:padding="3dp" />


</LinearLayout>