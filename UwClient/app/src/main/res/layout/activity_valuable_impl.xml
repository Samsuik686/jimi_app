<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <include layout="@layout/back_layout" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_check"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="盘点"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:background="@drawable/operate_left_unselect" />

            <TextView
                android:id="@+id/tv_sampling"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="抽检"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:background="@drawable/operate_right_unselect" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:padding="3dp">

        <TextView
            android:id="@+id/tv0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="操作人:"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/iv_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tv_operator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/iv_type_icon"
            android:layout_toEndOf="@id/tv0"
            android:gravity="center"
            android:background="@drawable/editext_background"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/layouts_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
