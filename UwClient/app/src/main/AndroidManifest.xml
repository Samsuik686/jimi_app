<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jimilab.uwclient">

    <application
        android:name=".UwClientApplication"
        android:allowBackup="true"
        android:icon="@mipmap/uw_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/uw_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".view.impl.PCB.PcbInActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".view.impl.PCB.PcbOutActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".view.impl.PCB.PcbPandianActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.impl.PCB.PcbChoujianActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.impl.PCB.PcbcheckActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.impl.PCB.PcbImpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.impl.PCB.PcbLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.impl.incomeArea.InComeAreaImplActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.impl.incomeArea.InComeAreaLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.impl.valuable.ValuableImplActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.impl.valuable.ValuableLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.impl.urgent.UrgentImplActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.impl.urgent.UrgentLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.impl.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".view.impl.urgent.UrgentService" />
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>